<%- include('header', {title: title}) -%>

<div class="container">
  <div class="p-3 my-3 bg-dark text-white text-center">
    <h1 class="display-4"><%= title %> Simulation</h1>
  </div>
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead class="thead-dark">
        <th>Person's Name</th>
        <% for(let i=0; i < itemCount; i++) { %>
        <th><%= items[i] %></th>
        <% } %>
      </thead>
      <tbody>
        <% for(let i=0; i < personCount; i++) { %>
        <tr>
          <th class="bg-dark text-white"><%= persons[i] %></th>
          <% for(let i=0; i < itemCount; i++) { %>
          <td><%= items[i] %></td>
          <% } %>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <div class="jumbotron">
    <form id="simRndForm">
      <div class="row text-center">
        <div class="col"></div>
        <div class="col-6 form-group">
          <h4>Simulation Rounds:</h4>
          <input
            class="form-control"
            id="simrounds"
            type="number"
            min="1"
            placeholder="Enter number of simulation rounds"
            name="simrounds"
            required
          />
        </div>
        <div class="col"></div>
      </div>
      <div class="row text-center">
        <div class="col"></div>
        <div class="col-6 form-group">
          <button id="simRndBtn" class="btn btn-primary">Submit</button>
        </div>
        <div class="col"></div>
      </div>
    </form>
  </div>
</div>

<%- include('footer') -%>
<div class="row"></div>
