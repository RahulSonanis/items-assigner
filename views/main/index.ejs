<%- include('header', {title: title}) -%>

<div class="container">
  <div class="p-3 my-3 bg-dark text-white text-center">
    <h1 class="display-4"><%= title %> Simulation</h1>
  </div>
  <div>
    <table class="table table-bordered">
      <thead class="thead-dark">
        <th>Person's Name</th>
        <% for(let i=0; i < itemCount; i++) { %>
        <th><%= items[i] %></th>
        <% } %>
      </thead>
      <tbody>
        <% for(let i=0; i < personCount; i++) { %>
        <tr>
          <th class="bg-dark text-white"><%= persons[i] %></th>
          <% for(let i=0; i < itemCount; i++) { %>
          <td><%= items[i] %></td>
          <% } %>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('footer') -%>
